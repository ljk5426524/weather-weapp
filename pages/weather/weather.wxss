/* pages/weather/weather.wxss */
.content-body{
  padding: 30rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
  min-height: 100vh;
  background: #56CCF2;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to left, #2F80ED, #56CCF2);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to left, #2F80ED, #56CCF2); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  


}
.icon-weather {
  width: 70rpx;
  height: 70rpx;
}

.weather-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* background-image: linear-gradient(90deg ,#fff 0%, #000 100%); */
}

.auth-content {
  box-sizing:border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding:100rpx 30rpx;
}

.icon-local {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 100rpx;
}
.btn-auth{
  color: #228AFF !important;
  border-color: #228AFF !important;
}
.auth-tip{
  margin-bottom: 100rpx;
  padding: 0 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.local-content{
  padding:  20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 2rpx 5rpx #f9f9f9;
}
.my-icon-local{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.next-content{
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 2rpx 5rpx #f9f9f9;
  margin-bottom: 30rpx;
}
.date-text{
  font-size:40rpx;
  color: #228AFF;    
  border-bottom: 1rpx solid #efefef;
  padding-bottom: 20rpx;
}

.week-text{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #2a2a2a;
}
.dayweather-content,.nightweather-content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 300rpx;
  padding: 20rpx 0;
}
.time-content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 30rpx 40rpx;
}

.time-sun,.time-moon{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 50rpx;
  color: #fff;
}

.day-sentence{
  padding: 0 30rpx ;
  position: relative;
  height: 300rpx;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
  color: #fff;
  /* border-bottom: 1rpx dashed #fff; */



}
.sentence-from{
  margin-left: auto;
  margin-top: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.banner-content{
  position: relative;
}
.banner{
  width: 100%;
  height:300rpx;
  position: absolute;
}

.banner-title{
  margin-right: auto;
}

.loading-content{
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hr-content{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-right: 10rpx;
}
.hr{
  margin-left: 20rpx;
  width: 100%;
  border-top: 2rpx solid #fff;
}

