/* pages/weather/weather.wxss */
.content-body {
  height: 100vh;
  padding: 30rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
  min-height: 100vh;
  /* background: linear-gradient(43deg, #4158D0 0%, #C850C0 46%, #FFCC70 100%); */
  background: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
}

.icon-weather {
  width: 70rpx;
  height: 70rpx;
}

.weather-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* background-image: linear-gradient(90deg ,#fff 0%, #000 100%); */
}

.auth-content {
  box-sizing: border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 30rpx;
}

.icon-local {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 100rpx;
}

.btn-auth {
  color: #228AFF !important;
  border-color: #228AFF !important;
}

.auth-tip {
  margin-bottom: 100rpx;
  padding: 0 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.local-content {
  padding: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #00000033;
  color: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 2rpx 5rpx #00000033;
}

.my-icon-local {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}

.next-content {
  padding: 30rpx;
  background-color: #00000033;
  border-radius: 40rpx;
  box-shadow: 0 0 2rpx 5rpx #00000033;
  margin-bottom: 30rpx;
  color: #fff;
}

.date-text {
  font-size: 40rpx;
  color: #fff;
  border-bottom: 1rpx solid #efefef4d;
  padding-bottom: 20rpx;
}

.week-text {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.icon-content {
  padding: 20rpx;
  background-color: #ffffffcc;
  border-radius: 20rpx;
}

.dayweather-content,
.nightweather-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 300rpx;
  padding: 30rpx 0 20rpx;
}

.time-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 30rpx 40rpx;
}

.time-sun,
.time-moon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 50rpx;
  color: #fff;
}

.day-sentence {
  padding: 0 30rpx;
  position: relative;
  height: 300rpx;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
  color: #fff;
  /* border-bottom: 1rpx dashed #fff; */



}

.sentence-from {
  margin-left: auto;
  margin-top: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.banner-content {
  position: relative;
}

.banner {
  width: 100%;
  height: 300rpx;
  position: absolute;
}

.banner-title {
  margin-right: auto;
}

.loading-content {
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hr-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-right: 10rpx;
}

.hr {
  margin-left: 20rpx;
  width: 100%;
  border-top: 2rpx solid #ffffff4d;
}