/* pages/weather/weather.wxss */
.content-body{
  padding: 30rpx;
}
.icon-weather {
  width: 70rpx;
  height: 70rpx;
}

.weather-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* background-image: linear-gradient(90deg ,#fff 0%, #000 100%); */
}

.auth-content {
  box-sizing:border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding:100rpx 30rpx;
}

.icon-local {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 100rpx;
}
.btn-auth{
  color: #228AFF !important;
  border-color: #228AFF !important;
}
.auth-tip{
  margin-bottom: 100rpx;
  padding: 0 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.local-content{
  padding: 10rpx 20rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #e8e8e8;
}
.my-icon-local{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.next-content{
  padding:20rpx 0;
}
.date-text{
  font-size:40rpx;
  color: #228AFF;
}

.week-text{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #2a2a2a;
}
.dayweather-content,.nightweather-content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 300rpx;
  padding: 20rpx 0;
}
.time-content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
}

.time-sun,.time-moon{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 50rpx;
}

.day-sentence{
  padding: 10rpx  30rpx 30rpx;
  position: relative;
  height: 400rpx;
  flex-direction: column;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 2;
  color: #fff;
}
.sentence-from{
  margin-left: auto;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.banner-content{
  position: relative;
}
.banner{
  width: 100%;
  /* height:160rpx; */
  position: absolute;
}

.banner-title{
  margin-right: auto;
}